<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Admin | GreenANew</title>

    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">

            <!-- Offcanvas Toggle -->
            <button class="btn btn-outline-light me-2"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#adminSidebar">
                ☰
            </button>

            <a class="navbar-brand fw-bold" href="#">🌱 GreenANew - Admin Panel</a>

            <div class="text-white d-flex align-items-center">
                Admin
                <a href="/Home/Logout"
                   class="btn btn-sm btn-outline-light ms-2">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-start bg-secondary text-white"
         tabindex="-1"
         id="adminSidebar">

        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Admin Menu</h5>
            <button type="button"
                    class="btn-close btn-close-white"
                    data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body p-0">
            <ul class="nav flex-column admin-menu">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/IssueManagement">Issues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/TaskManagement">Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/EventManagement">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/UserManagement">Users</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="p-4 bg-light">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-2">
        Admin Panel © 2026 GreenANew
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>

</body>
</html>
