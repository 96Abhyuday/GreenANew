
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model List<GreenANew.Models.User>

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h3 class="fw-bold">User Management</h3>
            <p class="text-muted">View and manage system users</p>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Sr. No.</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <!-- Sample Row -->
                        @{
                            int a = 1;
                        }
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@a</td>
                                <td>@m.Name</td>
                                <td>@m.Email</td>
                                <td>@m.Role</td>
                                @if (@m.IsActive == true)
{
    <td>
        <span class="badge bg-success">Active</span>
    </td>
    <td>
        <a href="/Home/AdminEditUserRole?Id=@m.UserId" class="btn btn-sm btn-warning">Edit Role</a>
        <a href="/Admin/BlockUser?Id=@m.UserId"
           class="btn btn-sm btn-danger"
           onclick="return confirm('Are you sure you want to block this user?');">
            Block
        </a>
    </td>
}
else
{
    <td>
        <span class="badge bg-danger">Blocked</span>
    </td>
    <td>
        <a href="/Admin/UnblockUser?Id=@m.UserId"
           class="btn btn-sm btn-success"
           onclick="return confirm('Unblock this user?');">
            Unblock
        </a>
    </td>
                            </tr>
                            a++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

