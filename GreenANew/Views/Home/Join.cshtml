@model List<GreenANew.Models.PlantationEvent>

@{
    ViewBag.Title = "Plantation Events";
    Layout = "~/Views/Shared/CommonLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="mb-4 text-center">
        <h3 class="fw-bold">Plantation Events</h3>
        <p class="text-muted">Join hands to make our city greener</p>
    </div>

    <!-- Success / Error Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <!-- Events List -->
    <div class="row g-4">

        @if (Model.Count == 0)
        {
            <div class="col-12 text-center text-muted">
                No upcoming events available.
            </div>
        }

        @foreach (var m in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title fw-bold">@m.Title</h5>

                        <p class="text-muted mb-2">
                            <strong>Location:</strong> @m.Location <br />
                            <strong>Date:</strong> @m.EventDate.ToString("dd MMM yyyy")
                        </p>

                        <p class="card-text flex-grow-1">
                            @m.Description
                        </p>

                        <div class="d-grid">
                            <a href="/Event/Join/@m.EventId"
                               class="btn btn-outline-success btn-sm">
                                Join Event
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

</div>


